@page "/employeeoverviewvirtual"

<h1 class="page-title">All employees</h1>

@if (Employees == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<div class="virtualized">
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Employee ID</th>
					<th>First name</th>
					<th>Last name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<Virtualize Items="Employees" ItemSize="ItemHeight">
						<tr @key="context.GetHashCode()">
							<td>@context.EmployeeId</td>
							<td>@context.FirstName</td>
							<td>@context.LastName</td>
						</tr>
				</Virtualize>
			</tbody>
	</table>
	</div>
}